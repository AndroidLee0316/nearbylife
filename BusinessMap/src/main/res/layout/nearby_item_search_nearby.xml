<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/nearby_white_ff"
    >

  <View
      android:id="@+id/nearby_view_bottom"
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:layout_alignParentBottom="true"
      android:layout_marginLeft="15dp"
      android:background="@color/nearby_gray_ededed"
      />
  <RelativeLayout
      android:id="@+id/nearby_rl_rect"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@id/nearby_view_bottom"
      android:paddingLeft="15dp"
      >
    <LinearLayout
        android:id="@+id/nearby_rl_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        >
      <TextView
          android:id="@+id/nearby_tv_near_call"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:drawablePadding="@dimen/dp_4"
          android:drawableTop="@drawable/nearby_ic_near_call"
          android:paddingLeft="@dimen/dp_12"
          android:paddingRight="@dimen/dp_12"
          android:text="@string/nearby_call_phone"
          android:textColor="@color/nearby_gray_999999"
          android:textSize="@dimen/text_size_10"
          />
      <View
          android:id="@+id/nearby_view_divider"
          android:layout_width="0.5dp"
          android:layout_height="16dp"
          android:layout_marginTop="19dp"
          android:background="@color/nearby_gray_dddddd"
          />
      <TextView
          android:id="@+id/nearby_tv_near_loc"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:drawablePadding="@dimen/dp_4"
          android:drawableTop="@drawable/nearby_ic_near_loc"
          android:paddingLeft="@dimen/dp_12"
          android:paddingRight="18dp"
          android:text="@string/nearby_go_here"
          android:textColor="@color/nearby_gray_999999"
          android:textSize="@dimen/text_size_10"
          />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/nearby_rl_middle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/nearby_rl_right"
        android:paddingRight="18dp"
        >
      <TextView
          android:id="@+id/nearby_tv_item_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="14dp"
          android:ellipsize="end"
          android:maxLines="1"
          android:textColor="#2e332f"
          android:textSize="@dimen/text_size_17"
          tools:text="AED(深圳中海大厦)AED(深圳中海大厦)"
          />

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="18dp"
          android:layout_below="@id/nearby_tv_item_title"
          android:layout_marginTop="6dp"
          >
        <TextView
            android:id="@+id/nearby_tv_item_distance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/nearby_iv_address"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="123m"
            android:textColor="@color/nearby_gray_666666"
            android:textSize="12sp"
            />
        <View
            android:id="@+id/nearby_view_middle"
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/nearby_tv_item_distance"
            android:background="#dddddd"
            />
        <TextView
            android:id="@+id/nearby_tv_item_address"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_toRightOf="@id/nearby_view_middle"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/nearby_gray_666666"
            android:textSize="13sp"
            tools:text="深圳市罗湖区宝安北路2078号深圳市罗湖区宝安北路2078号"
            />
      </RelativeLayout>
    </RelativeLayout>
  </RelativeLayout>

</RelativeLayout>
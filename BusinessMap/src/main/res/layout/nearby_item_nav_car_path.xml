<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/nearby_white_ff"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:paddingTop="@dimen/dp_12"
    android:paddingBottom="@dimen/dp_5"
    >

    <TextView
        android:id="@+id/temp_tv_path_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/nearby_black_333333"
        android:textSize="@dimen/text_size_17"
        tools:text="终点：平安金融中心地下停车场终点：平安金融中心地下停车场" />

    <TextView
        android:id="@+id/temp_tv_path_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/nearby_gray_666666"
        android:textSize="@dimen/text_size_13"
        tools:text="起点：宝安南路地王大厦：地王大厦地下停车场" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@color/nearby_gray_e8e8e8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/temp_tv_path_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/nearby_black_333333"
            android:textSize="@dimen/text_size_17"
            tools:text="20分钟" />

        <TextView
            android:id="@+id/temp_tv_path_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/nearby_shape_green_radius_stroke"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="@dimen/dp_2"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="@dimen/dp_2"
            android:text="最快路线"
            android:textColor="@color/pasc_primary"
            android:textSize="@dimen/text_size_10" />
    </LinearLayout>

    <TextView
        android:id="@+id/temp_tv_path_transfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/nearby_shape_gray_transfer_bg"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_5"
        android:textColor="@color/pasc_primary"
        android:textSize="@dimen/text_size_13"
        android:visibility="visible"
        tools:text="地铁1号线-地铁7号线" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/temp_tv_path_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/nearby_gray_666666"
            android:textSize="@dimen/text_size_13"
            tools:text="1.3km" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:id="@+id/divider"
            android:background="@color/nearby_gray_dddddd" />

        <TextView
            android:id="@+id/temp_tv_path_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/nearby_gray_666666"
            android:textSize="@dimen/text_size_13"
            tools:text="5.0元" />
    </LinearLayout>


</LinearLayout>
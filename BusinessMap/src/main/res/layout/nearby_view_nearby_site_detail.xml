<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nearby_location_detail_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/nearby_white_ff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nearby_tv_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/pasc_primary_text"
            android:textSize="@dimen/pasc_navigation_title_size"
            tools:text="中国建设银行" />

        <TextView
            android:id="@+id/nearby_go_navigation_button"
            android:layout_width="68dp"
            android:layout_height="32dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/nearby_poi_class_tab_selected"
            android:gravity="center"
            android:text="去这里"
            android:textColor="@color/nearby_white_ff"
            android:textSize="@dimen/text_size_15" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nearby_iv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/nearby_ic_detail_loc_grey" />

        <TextView
            android:id="@+id/nearby_tv_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/nearby_gray_666666"
            android:textSize="@dimen/text_size_13"
            tools:text="深圳市莲花大厦" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="19dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nearby_iv_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/nearby_ic_detail_call_grey" />

        <TextView
            android:id="@+id/nearby_tv_item_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:ellipsize="end"
            android:gravity="center|left"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/nearby_gray_666666"
            android:textSize="@dimen/text_size_13"
            tools:text="0755-82668888" />

    </LinearLayout>

</LinearLayout>